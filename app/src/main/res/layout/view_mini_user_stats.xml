<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context=".screen.question.details.tabs.DetailsFragment"
    tools:ignore="SmallSp"
    tools:parentTag="com.warmpot.android.stackoverflow.screen.customview.MiniUserStatsView">

    <TextView
        android:id="@+id/reputationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:paddingEnd="@dimen/spacing_sm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatarImg"
        tools:text="9" />

    <TextView
        android:id="@+id/goldBadgeCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_xs"
        android:paddingHorizontal="@dimen/spacing_sm"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/dark_gold"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/bullet_dark_gold"
        tools:text="15" />

    <TextView
        android:id="@+id/silverBadgeCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_xs"
        android:paddingHorizontal="@dimen/spacing_sm"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/silver"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/bullet_silver"
        tools:text="0" />

    <TextView
        android:id="@+id/bronzeBadgeCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_xs"
        android:paddingHorizontal="@dimen/spacing_md"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/bronze"
        app:drawableStartCompat="@drawable/bullet_bronze"
        tools:text="1024" />
</merge>
